generator client { 
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum Plan {
  FREE
  PREMIUM
}

enum Frequency {
  DAILY
  WEEKLY
}

enum Category {
  PHYSICAL_HEALTH
  MENTAL_HEALTH
  SPIRITUALITY
  SOCIAL_RELATIONSHIPS
  PRODUCTIVITY
  CREATIVITY
}

enum SubscriptionPeriod {
  MONTHLY
  YEARLY
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  clerkId String @unique
  stripeCustomerId String? @unique
  plan Plan @default(FREE)
  subscription Subscription?
  habits Habit[]
  completedHabitsHistory CompletedHabitHistory[]
  zenithPoints Int @default(3)
  zenithPointsLastUpdatedDate DateTime?
  lastAdvicePrompt Json?
  completedHabits Int @default(0)
  completedAchievements Int[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id Int @id @default(autoincrement())
  plan Plan
  period SubscriptionPeriod
  startDate DateTime @default(now())
  endDate DateTime
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Habit {
  id Int @id @default(autoincrement())
  title String
  description String?
  category Category
  frequency Frequency
  level Int @default(1)
  weeklyDays Int[]
  completedDates DateTime[]
  failedDates DateTime[]
  startDay DateTime @default(now())
  longestStreak Int @default(0)
  plannedDays Int @default(66)
  forcedRestart Boolean @default(false)
  completed Boolean @default(false)
  user User @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompletedHabitHistory {
  id Int @id @default(autoincrement())
  title String
  description String?
  category Category
  frequency Frequency
  weeklyDays Int[]
  startDay DateTime
  completedDay DateTime
  timesCompleted Int @default(1)
  plannedDays Int
  user User @relation(fields: [userId], references: [id])
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}